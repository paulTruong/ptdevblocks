{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "slug": "foreground",
                    "color": "#11192e",
                    "name": "Foreground"
                },
                {
                    "slug": "background",
                    "color": "#ffffff",
                    "name": "Background"
                },
                {
                    "slug": "primary",
                    "color": "#52191e",
                    "name": "Primary"
                }
            ]
        },
        "custom": {
            "spacing": {
                "small": "max(1.25rem, 5vw)",
                "medium": "clamp(2rem, 8vw, calc(4 * var(--wp--style--block-gap)))",
                "large": "clamp(4rem, 10vw, 8rem)",
                "outer": "var(--wp--custom--spacing--small, 1.25rem)"
            }
        },
        "layout": {
            "contentSize": "700px",
            "wideSize": "1200px"
        },
        "typography": {
            "fontFamilies": [
                {
                    "name": "Antique Olive",
                    "slug": "antique-olive",
                    "fontFamily": "antique-olive, sans-serif"
                },
                {
                    "name": "FF Tisa Pro",
                    "slug": "ff-tisa-pro",
                    "fontFamily": "ff-tisa-web-pro, serif"
                }
            ],
            "fontSizes": [
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "clamp(0.875rem, 2.5vw, 1rem)"
                },
                {
                    "name": "Medium",
                    "slug": "medium",
                    "size": "clamp(1rem, 1.5vw, 1.25rem)"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "size": "clamp(1.25rem, 3vw, 1.875rem)"
                },
                {
                    "name": "Extra Large",
                    "slug": "x-large",
                    "size": "clamp(1.875rem, 3vw, 3rem)"
                },
                {
                    "name": "2X Large",
                    "slug": "2x-large",
                    "size": "clamp(2.25rem, 6vw, 4.5rem)"
                },
                {
                    "name": "3X Large",
                    "slug": "3x-large",
                    "size": "clamp(2.25rem, 9vw, 6.375rem)"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--foreground)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--ff-tisa-pro)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.4"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--antique-olive)",
                    "fontSize": "var(--wp--preset--font-size--2-x-large)",
                    "fontWeight": "700",
                    "lineHeight": "1",
                    "letterSpacing": "-1px"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--antique-olive)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "700",
                    "lineHeight": "1",
                    "letterSpacing": "-1px"
                },
                "spacing": {
                    "padding": {
                        "top": "40px"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--antique-olive)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "700",
                    "lineHeight": "1.15"
                },
                "spacing": {
                    "padding": {
                        "top": "16px"
                    }
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--antique-olive)",
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "700",
                    "lineHeight": "1.15"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ff-tisa-pro)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "700",
                    "lineHeight": "1.6",
                    "textTransform": "uppercase"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ff-tisa-pro)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "400",
                    "lineHeight": "1.6",
                    "textTransform": "uppercase"
                }
            }
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": "4px"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--background)"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)"
                }
            },
            "core/code": {
                "border": {
                    "radius": "4px"
                }
            },
            "core/image": {
                "border": {
                    "radius": "4px"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                }
            },
            "core/post-title": {
                "spacing": {
                    "padding": {
                        "top": "16px"
                    }
                }
            },
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--antique-olive)",
                    "fontSize": "var(--wp--preset--font-size--large)"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--foreground)"
                        },
                        "typography": {
                            "textDecoration": "none"
                        }
                    }
                }
            },
            "core/table": {
                "spacing": {
                    "padding": {
                        "left": "1rem"
                    }
                }
            }
        },
        "spacing": {
            "blockGap": "1rem"
        }
    }
}
